<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <bean id="messageFactory" class="com.smalaca.messagesender.domain.MessageFactory"/>

    <bean
            id="messageRepository"
            class="com.smalaca.messagesender.repository.inmemory.InMemoryMessageRepository">
        <constructor-arg>
            <list>
                <bean factory-bean="messageFactory" factory-method="createFrom">
                    <constructor-arg>
                        <bean class="com.smalaca.messagesender.service.MessageDto">
                            <property name="subject" value="some subject"/>
                            <property name="body" value="some body"/>
                        </bean>
                    </constructor-arg>
                </bean>
                <bean factory-bean="messageFactory" factory-method="createFrom">
                    <constructor-arg>
                        <bean class="com.smalaca.messagesender.service.MessageDto">
                            <property name="subject" value="some subject"/>
                            <property name="body" value="some body"/>
                        </bean>
                    </constructor-arg>
                    <constructor-arg value="123456"/>
                </bean>
                <bean factory-bean="messageFactory" factory-method="createFrom">
                    <constructor-arg>
                        <bean class="com.smalaca.messagesender.service.MessageDto">
                            <property name="subject" value="some subject"/>
                            <property name="body" value="some body"/>
                            <property name="to" value="javakrk5"/>
                            <property name="from" value="smalaca"/>
                        </bean>
                    </constructor-arg>
                    <constructor-arg value="123456"/>
                </bean>
                <bean factory-bean="messageFactory" factory-method="createFrom">
                    <constructor-arg>
                        <bean class="com.smalaca.messagesender.service.MessageDto">
                            <property name="body" value="nice body"/>
                            <property name="subject" value="hot topic"/>
                        </bean>
                    </constructor-arg>
                </bean>
            </list>
        </constructor-arg>
    </bean>
</beans>