<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
http://www.springframework.org/schema/util
http://www.springframework.org/schema/util/spring-util-2.5.xsd">

    <util:list id="messages"/>
    <util:map id="users"/>

    <bean
            id="messageRepository"
            class="com.smalaca.messagesender.repository.inmemory.InMemoryMessageRepository">
        <constructor-arg ref="messages"/>
    </bean>

    <bean id="userRepository" class="com.smalaca.messagesender.repository.inmemory.InMemoryUserRepository">
        <constructor-arg ref="users"/>
    </bean>
</beans>